  <div id="myCarousel" class="carousel carousel-fade slide" data-ride="carousel" data-interval="3000">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
      <li data-target="#myCarousel" data-slide-to="3"></li>
      <li data-target="#myCarousel" data-slide-to="4"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">

      <div class="item active">
        <img src="/sites/default/files/slideshow/slideshow_porbiota.jpg" alt="PORBIOTA presentation" style="width:100%;">
        <div class="carousel-caption">
        {% if language.getId() == 'en' %}
          <a href="/areas/biodiversidade"><h3>Portuguese e-infrastructure for Information and Research on Biodiversity</h3></a>
          <p>Supporting biodiversity and ecosystems research towards sustainable development</p>
        {% else %}
          <a href="/areas/biodiversidade"><h3>e-infrastructure Portuguesa de Informação e Investigação em Biodiversidade</h3></a>
          <p>Promovendo a investigação sobre biodiversidade e ecossistemas para um desenvolvimento sustentável</p>
        {% endif %}
        </div>
      </div>

      <div class="item">
        <img src="/sites/default/files/slideshow/slideshow_biodiv.jpg" alt="Observações e dados de espécimes de colecções" style="width:100%;">
        <div class="carousel-caption">
        {% if language.getId() == 'en' %}
          <a href="/areas/biodiversidade"><h3>Species occurrences</h3></a>
          <p>Observations and collection specimen data</p>
          <a href="/dados"><button type="button" class="buttonSlideshow btn btn-default">Data platform</button></a>
        {% else %}
          <a href="/areas/biodiversidade"><h3>Ocorrência de espécies</h3></a>
          <p>Dados de observações e espécimes de colecções</p>
          <a href="/dados"><button type="button" class="buttonSlideshow btn btn-default">Plataforma de dados</button></a>
        {% endif %}
        </div>
      </div>

      <div class="item">
        <img src="/sites/default/files/slideshow/slideshow_gen.jpg" alt="Barcoding e genómica ambiental" style="width:100%;">
        <div class="carousel-caption">
        {% if language.getId() == 'en' %}
          <a href="/areas/biodiversidade"><h3>DNA Barcode and environmental genomics</h3></a>
          <p>Identification of genetic diversity</p>
        {% else %}
          <a href="/areas/genetica"><h3>DNA Barcoding e genómica ambiental</h3>
          <p>Identifcação da diversidade genética</p>
        {% endif %}
        </div>
      </div>

      <div class="item">
        <img src="/sites/default/files/slideshow/slideshow_lter3.jpg" alt="Estudos ecológicos de longo prazo" style="width:100%;">
        <div class="carousel-caption">
        {% if language.getId() == 'en' %}
          <a href="/areas/lter"><h3>Long term ecological studies</h3>
          <p>Ecological processes moinitoring</p>
        {% else %}
          <a href="/areas/lter"><h3>Estudos ecológicos de longo prazo</h3>
          <p>Monitorização de processos ecológicos</p>
        {% endif %}
        </div>
      </div>

      <div class="item">
        <img src="/sites/default/files/slideshow/slideshow_icos1.jpg" alt="Fluxos de gases com efeitos de estufa" style="width:100%;">
        <div class="carousel-caption">
          {% if language.getId() == 'en' %}
            <a href="/areas/icos"><h3>Greenhouse gases fluxes</h3>
            <p>Measurement of gases fluxes and climate change effects</p>
          {% else %}
            <a href="/areas/icos"><h3>Fluxos de gases com efeitos de estufa</h3>
            <p>Medição de fluxos gasosos e efeitos das alterações climáticas</p>
          {% endif %}
        </div>
      </div>


    <!-- Left and right controls disabled
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
    -->
  </div>
</div>
{% if language.getId() == 'en' %}
  <div class="float-right slideshow-credits"><a href="https://www.flickr.com/photos/83637132@N02/">Photo by César Garcia</a>.</div>
{% else %}
  <div class="float-right slideshow-credits"><a href="https://www.flickr.com/photos/83637132@N02/">Fotografia por César Garcia</a>.</div>
{% endif %}
